<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#FFFFFD">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/number1"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.193" android:textColor="#C913E8"
            android:textColorHighlight="#9C27B0" android:textColorHint="#9C27B0" android:textColorLink="#9C27B0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/number2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number1" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.208" android:textColor="#9C27B0"
            android:textColorHighlight="#9C27B0" android:textColorHint="#9C27B0" android:textColorLink="#9C27B0"/>
    <TextView
            android:text="Enter number 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/number1"
            app:layout_constraintVertical_bias="0.728" android:textStyle="bold" android:textColorLink="#FF9800"
            android:textColorHighlight="#FFC107" android:textColor="#FF9800" android:typeface="monospace"/>
    <TextView
            android:text="Enter number 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number1" app:layout_constraintBottom_toTopOf="@+id/number2"
            app:layout_constraintVertical_bias="0.604" android:textColor="#FF9800"
            android:textColorHighlight="#FF9800" android:textColorHint="#FF9800" android:textColorLink="#FF9800"
            android:typeface="monospace" android:textStyle="bold"/>
    <Button
            android:text="Add"
            android:layout_width="157dp"
            android:layout_height="43dp" android:id="@+id/add"
            app:backgroundTint="#2196F3"
            android:textStyle="bold" android:fontFamily="sans-serif-condensed"
            app:layout_constraintEnd_toStartOf="@+id/subtract" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.615" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.52"/>
    <Button
            android:text="Subtract"
            android:layout_width="157dp"
            android:layout_height="43dp" android:id="@+id/subtract"
            app:backgroundTint="#4CAF50"
            android:textStyle="bold" android:fontFamily="sans-serif-condensed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.52"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.874"/>
    <Button
            android:text="Multiply"
            android:layout_width="157dp"
            android:layout_height="43dp" android:id="@+id/multiply"
            app:backgroundTint="#FF5722"
            android:textStyle="bold" android:fontFamily="sans-serif-condensed"
            app:layout_constraintTop_toBottomOf="@+id/add" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.053"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.157"/>
    <Button
            android:text="Divide"
            android:layout_width="157dp"
            android:layout_height="43dp" android:id="@+id/divide"
            app:backgroundTint="#9C27B0"
            android:textStyle="bold" android:fontFamily="sans-serif-condensed"
            app:layout_constraintTop_toBottomOf="@+id/subtract" app:layout_constraintStart_toEndOf="@+id/multiply"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.438" app:layout_constraintVertical_bias="0.08"/>
    <TextView
            android:layout_width="189dp"
            android:layout_height="65dp" android:id="@+id/result"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="20sp" android:textStyle="bold" android:textColor="#9C27B0"
            android:textColorHighlight="#9C27B0" android:textColorHint="#9C27B0" android:textColorLink="#9C27B0"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:paddingLeft="2px"
            android:paddingRight="2px" android:layout_marginBottom="136dp"
            app:layout_constraintTop_toBottomOf="@+id/number2" app:layout_constraintVertical_bias="1.0"
    />
</androidx.constraintlayout.widget.ConstraintLayout>